package main

import "fmt"

//garble:nocontrolflow
func SkipMe() {
	fmt.Println("skip")
}

func helper(x int) int {
	if x%2 == 0 {
		return x / 2
	}
	return x*3 + 1
}

func main() {
	fmt.Println("start")
	fmt.Println(helper(5))
	SkipMe()
}

