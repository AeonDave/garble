import "C"

func cgoFunc() {
	fmt.Println(C.privateAdd(C.int(1), C.int(2)))
	_, _ = user.Current()

	st := C.struct_portedStruct{}
	fmt.Println(st.PortedField == nil)

	C.callGoCallbacks()
}

//export goCallback
func goCallback() {
	fmt.Println("go callback")
}

//export printString
func printString(cs *C.char) {
	fmt.Println(C.GoString(cs))
}

